				o.Specular = 0.0;
				o.Custom = 0.0;
				
float4 Tex2D1=tex2D(_Diffuse,(IN.uv_Diffuse.xyxy).xy);
float4 Splat0=float4( IN.worldPos.x, IN.worldPos.y,IN.worldPos.z,1.0 ).y;
